<h1>Edit model group</h1>
<form>
	<div class="form-group">
		<label>Label</label>
		{{input type="text" class="form-control" value=model.label placeholder="Add Model group..."}}
	</div>
	<div class="form-group">
		<label>Description</label>
		{{textarea class="form-control" value=model.description placeholder="Describe Model group..."}}
	</div>
	<button {{action 'editModelGroup' model.id}} class="btn btn-primary">Submit</button>
</form>
