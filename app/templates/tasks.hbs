{{outlet}}
<h1>Tasks</h1>
<p>
	<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> {{#link-to 'tasks.new'}} New task{{/link-to}}
</p>

{{#each model as |task|}}
	<div class="well">
	  <h4>{{#link-to "tasks.edit" task.id}}{{task.title}}{{/link-to}}</h4>
	  <small>{{format-date task.date}}</small> 
	  <p>{{task.description}}</p>
	  <button {{action 'deleteTask' task.id}} class="btn btn-danger">Delete</button>
	 </div>
{{/each}}